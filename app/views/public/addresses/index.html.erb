<% if @addresses.errors.any? %>
  <%= @addresses.errors.count %>件のエラーが発生しました
  <ul>
    <% @addresses.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <h5>配送先登録/一覧</h5>
  <%= form_with model: @addresses, url: addresses_path, method: :post  do |f| %>
  <div class="row mt-3" >
    <div class="col-lg-3">
      郵便番号(ハイフンなし)
    </div>
    <div class="col-lg-3">
      <%= f.text_field :postal_code %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-3">
      住所
    </div>
    <div class="col-lg-3">
      <%= f.text_field :address, class: "col-lg-10" %>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-lg-3">
      宛名
    </div>
    <div class="col-lg-3">
      <%= f.text_field :name %>
    </div>
    <div class="col-lg-3">
      <%= f.submit '新規登録', class: "btn btn-sm btn-success" %>
    </div>
  </div>
  <% end %>
  <div class="row">
    <table class="table table-borderded">
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
      </tr>
      <tbody>
        <% @address.each do |addresss| %>
        <tr>
          <td><%= addresss.postal_code %></td>
          <td><%= addresss.address %></td>
          <td><%= addresss.name %></td>
          <td><%= link_to '編集する',edit_address_path(addresss.id), class: "btn btn-sm btn-success mx-2" %><%= link_to '削除する', address_path(addresss.id), method: :delete, class: "btn btn-sm btn-danger"  %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>










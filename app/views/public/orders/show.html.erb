<p>注文情報</p>
<table>
  <tr>
    <th>注文日</th>
    <td><%= @order.updated_at %></td>
  </tr>
  <tr>
    <th>配送先</th>
    <td><%= @order.post_code + @order.shipping_address + @order.name %></td>
  </tr>
  <tr>
    <th>支払方法</th>
    <td>
      <% if @order.payment == 0 %>
        <%= Order.payment_methods_i18n[:credit_card] %>
      <% elsif @order.payment == 1 %>
        <%= Order.payment_methods_i18n[:transfer] %>
      <% end %></td>
  </tr>
  <tr>
    <th>ステータス</th>
    <td><% if @order.order_status == 0 %>
          <%= "入金待ち" %>
        <% elsif @order.order_status == 1 %>
          <%= "入金確認" %>
        <% elsif @order.order_status == 2 %>
          <%= "製作中" %>
        <% elsif  @order.order_status == 3 %>
          <%= "発送準備中" %>
        <% else %>
          <%= "発送済" %>
        <% end %></td>
  </tr>
</table>

<p>請求情報</p>
<table>
  <tr>
    <th>商品合計</th>
    <td><%= @order.invoice - @order.postage %></td>
  </tr>
  <tr>
    <th>配送料</th>
    <td><%= @order.postage %></td>
  </tr>
  <tr>
    <th>ご請求額計</th>
    <td><%= @order.invoice %></td>
  </tr>
</table>

<p>注文内容</p>
<table>
  <% @order_item.each do |order_item| %>
  <tr>
    <th>商品</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
  </tr>
  <tr>
    <td><%= order_item.item.name %></td>
    <td><%= order_item.buy_price %></td>
    <td><%= order_item.amount %></td>
    <td><%= order_item.buy_price * order_item.amount %></td>
  </tr>
  <% end %>
</table>


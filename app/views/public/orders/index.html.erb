<table>
  <tr>
    <th>注文日</th>
    <th>配送先</th>
    <th>注文商品</th>
    <th>支払金額</th>
    <th>ステータス</th>
    <th>注文詳細</th>
  </tr>
  <% @order.each do |order| %>
  <tr>
    <td><%= order.updated_at %></td>
    <td><%= order.post_code + order.shipping_address + order.name %></td>
    <td><% order.order_items.each do |item| %>
          <%= item.item.name %>
        <% end %></td>
    <td><%= order.invoice %></td>
    <td><% if order.order_status == 0 %>
          <%= "入金待ち" %>
        <% elsif order.order_status == 1 %>
          <%= "入金確認" %>
        <% elsif order.order_status == 2 %>
          <%= "製作中" %>
        <% elsif  order.order_status == 3 %>
          <%= "発送準備中" %>
        <% else %>
          <%= "発送済" %>
        <% end %></td>
    <td><%= link_to '表示する', order_path(order.id) %></td>
  </tr>
  <% end %>
</table>
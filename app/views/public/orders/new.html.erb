<div class="container">
  <h4>注文情報入力</h4>
  <%= form_with model: @order, url: check_orders_path, method: :post do |f| %>
  
  <div class="row">
    支払方法
  </div>
  <div class="row" style="margin-left: 20px">
    <%= f.radio_button :payment, Order.payment_methods.key(0) %>
    <%= f.label :payment_method_credit_card, Order.payment_methods_i18n[:credit_card] %>
  </div>
  <div class="row" style="margin-left: 20px">
    <%= f.radio_button :payment, Order.payment_methods.key(1) %>
    <%= f.label :payment_method_transfer, Order.payment_methods_i18n[:transfer] %>
  </div>
  
  <div class="row" style="margin-left: 20px">
    お届け先
  </div>
  <div class="row" style="margin-left: 20px">
    <%= f.radio_button :select_button, 1 %>ご自身の住所
  </div>
  <div class="row" style="margin-left: 20px">
    <%= f.label :self_address, current_customer.address_display %>
  </div>

  <div class="row" style="margin-left: 20px">
    <%= f.radio_button :select_button, 2 %>登録済住所から選択
  </div>
  <div class="row" style="margin-left: 20px">
    <%= f.select :address_id, options_from_collection_for_select(current_customer.addresses, :id, :address_display), class: "form-control" %>
  </div>
  <div class="row" style="margin-left: 20px">
    <%= f.radio_button :select_button, 3 %>新しいお届け先
  </div>
  <div class="row" style="margin-left: 20px">
    <div class="col-lg-3">
      郵便番号(ハイフンなし)
    </div>
    <div class="col-lg-3">
      <%= f.text_field :post_code, class: "form-control" %>
    </div>
  </div>
  <div class="row" style="margin-left: 20px">
    <div class="col-lg-3">
      住所
    </div>
    <div class="col-lg-6">
      <%= f.text_field :shipping_address, class: "form-control" %>
    </div>
  </div>
  <div class="row" style="margin-left: 20px">
    <div class="col-lg-3">
      宛名
    </div>
    <div class="col-lg-3">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="row" style="margin-left: 20px">
    <div class="col-lg-4">
    </div>
    <div class="col-lg-3">
      <%= f.submit '確認画面へ進む', class: "btn btn-sm btn-primary" %>
    </div>
  </div>
  <% end %>
</div>


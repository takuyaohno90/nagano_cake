<p>購入者<%= @order.customer.last_name + @order.customer.first_name %></p>
<p>注文日<%= @order.created_at.strftime("%Y/%m/%d") %></p>
<p>配送先<%= @order.address_display %></p>
<p>支払方法
  <% if @order.payment == 0 %>
    <%= Order.payment_methods_i18n[:credit_card] %>
  <% elsif @order.payment == 1 %>
    <%= Order.payment_methods_i18n[:transfer] %>
  <% end %></p>
<p>注文ステータス</p>

<table>
  <tr>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
    <th>製作ステータス</th>
  </tr>
  <% @order.order_items.each do |order_items| %>
  <tr>
    <td><%= order_items.item.name %></td>
    <td><%= (order_items.item.price * 1.1).floor %></td>
    <td><%= order_items.amount %></td>
    <td><%= (order_items.item.price * 1.1 * order_items.amount).floor %></td>
    <td></td>
  </tr>
  <% end %>
</table>
<% if @item.errors.any? %>
  <%= @item.errors.count %>件のエラーが発生しました
  <ul>
    <% @item.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <h5>商品新規登録</h5>
  <div class="justify-content-center align-items-center">
    <%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
    <div class="row">
      <div class="col-lg-3">
        商品画像
      </div>
      <div class="col-lg-6">
        <%= f.file_field :image, accept: "image/*" %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-3">
        商品名
      </div>
      <div class="col-lg-6">
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-3">
        商品説明
      </div>
      <div class="col-lg-6">
        <%= f.text_area :introduction %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-3">
        ジャンル
      </div>
      <div class="col-lg-6">
        <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-3">
        税抜き価格
      </div>
      <div class="col-lg-6">
        <%= f.text_field :price %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-3">
        販売ステータス
      </div>
      <div class="col-lg-6">
        <%= f.radio_button :is_active, true %>
        <%= f.label :is_active_true, '販売中' %>
        <%= f.radio_button :is_active, false %>
        <%= f.label :is_active_false, '販売停止中' %>
        <%= f.submit '新規登録', class: "btn btn-sm btn-success" %>
      </div>
     <% end %>
    </div>
  </div>
</div>


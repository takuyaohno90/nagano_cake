<div class="container">
  <div class="row" style="margin-top: 20px; margin-bottom: 20px;">
    <h5>会員詳細</h5>
  </div>
  <div class="row">
    <div class="col-lg-2">
      会員ＩＤ
    </div>
    <div class="col-lg-5">
      <%= @customer.id %>
    </div>
  </div>
  <div class="row" style="margin-top: 5px;">
    <div class="col-lg-2">
      氏名
    </div>
    <div class="col-lg-5">
      <%= @customer.last_name %><%= @customer.first_name %>
    </div>
  </div>
  <div class="row" style="margin-top: 5px;">
    <div class="col-lg-2">
      郵便番号
    </div>
    <div class="col-lg-5">
      <%= @customer.postal_code %>
    </div>
  </div>
  <div class="row" style="margin-top: 5px;">
    <div class="col-lg-2">
      住所
    </div>
    <div class="col-lg-5">
      <%= @customer.address %>
    </div>
  </div>
  <div class="row" style="margin-top: 5px;">
    <div class="col-lg-2">
      電話番号
    </div>
    <div class="col-lg-5">
      <%= @customer.telephone_number %>
    </div>
  </div>
  <div class="row" style="margin-top: 5px;">
    <div class="col-lg-2">
      メールアドレス
    </div>
    <div class="col-lg-5">
      <%= @customer.email %>
    </div>
  </div>
  <div class="row" style="margin-top: 5px;">
    <div class="col-lg-2">
      会員ステータス
    </div>
    <div class="col-lg-5 <%= @customer.is_deleted ? 'text-muted' : 'text-success' %>">
      <% if @customer.is_deleted == false %>
        <%= '有効' %>
      <% else %>
        <%= '無効' %>
      <% end %>
    </div>
  </div>
  <div class="row" style="margin-top: 5px;">
    <div class="col-lg-2">
    </div>
    <div class="col-lg-2 ">
      <%= link_to '編集する', edit_admin_customer_path(@customer.id), class: "btn btn-sm btn-success" %>
    </div>
    <div class="col-lg-3 ">
      <%= link_to '注文履歴一覧を見る', admin_path, class: "btn btn-sm btn-primary" %>
    </div>
  </div>
</div>



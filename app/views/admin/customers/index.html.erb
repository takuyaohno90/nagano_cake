<table>
  <tr>
    <th>会員ＩＤ</th>
    <th>氏名</th>
    <th>メールアドレス</th>
    <th>ステータス</th>
  </tr>
  <tbody>
    <% @customer.each do |customer| %>
    <tr>
      <td><%= customer.id %></td>
      <td><%= link_to admin_customer_path(customer.id) do %>
            <%= customer.last_name + customer.first_name %>
          <% end %></td>
      <td><%= customer.email %></td>
      <td><% if customer.is_deleted == false %>
            <%= '有効' %>
          <% else %>
            <%= '無効' %>
          <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>

</table>

<%= paginate @customer %>
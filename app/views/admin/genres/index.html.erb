<div class="container">
  <div class="row" style="margin-top: 20px;">
    <h5>ジャンル一覧・追加</h5>
  </div>
  <%= form_with model: @genre, url: admin_genres_path do |f| %>
  <div class="row" style="margin-top: 20px;">
    <div class="col-lg-2">
      ジャンル名
    </div>
    <div class="col-lg-2">
      <%= f.text_field :name %>
    </div>
    <div class="col-lg-2">
      <%= f.submit '新規投稿', class: "btn btn-sm btn-success" %>
    </div>
  </div>
  <% end %>
  <div class="row" style="margin-top: 20px;">
    <div class="col-lg-3">
      <table class="table table-bordered">
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>








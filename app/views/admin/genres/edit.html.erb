<div class="container">
  <div class="row" style="margin-top: 20px; margin-left: 20px; margin-bottom: 20px;">
    <h5>ジャンル編集</h5>
  </div>
  <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
  <div class="row">
    <div class="col-lg-2">
      ジャンル名
    </div>
    <div class="col-lg-2">
      <%= f.text_field :name %>
    </div>
    <div class="col-lg-2">
      <%= f.submit '変更を保存', class: "btn btn-sm btn-success" %>
    </div>
  </div>
  <% end %>
</div>



